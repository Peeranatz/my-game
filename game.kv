<MainMenu>:
    FloatLayout:
        canvas.before:
            Rectangle:
                source: "images/backgrounds/main_bk_football.jpg"
                pos: self.pos
                size: self.size

        Button:
            text: "Start Game"
            font_size: 24
            size_hint: 0.3, 0.1
            pos_hint: {"center_x": 0.5, "center_y": 0.58}
            on_release:
                app.root.current = "select_player"

        Button:
            text: "Quit Game"
            font_size: 24
            size_hint: 0.3, 0.1
            pos_hint: {"center_x": 0.5, "center_y": 0.4}
            on_release:
                app.stop()


<SelectPlayerScreen>:
    FloatLayout:
        canvas.before:
            Rectangle:
                source: "selec_player_bk.jpg"
                pos: self.pos
                size: self.size

        Label:
            text: "Select Your Player"
            font_size: 48
            size_hint: None, None
            pos_hint: {"center_x": 0.5, "center_y": 0.85}

        GridLayout:
            cols: 7
            spacing: 20
            size_hint: None, None
            size: self.minimum_size
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

            # Player cards
            # (You can dynamically generate these in Python if needed)
            # Example for one player card:
            FloatLayout:
                size_hint: None, None
                size: 100, 150

                Image:
                    source: "ronaldo-re.png"
                    size_hint: None, None
                    size: 100, 100
                    pos: 0, 50

                Label:
                    text: "Ronaldo"
                    font_size: 16
                    size_hint: None, None
                    size: 100, 20
                    pos: 0, 30

                Button:
                    text: "Select"
                    size_hint: None, None
                    size: 100, 20
                    pos: 0, 0
                    on_release:
                        root.select_player(0)


<GameOverScreen>:
    FloatLayout:
        canvas.before:
            Rectangle:
                source: "gameover.jpg"
                pos: self.pos
                size: self.size

        Label:
            id: results_label
            text: ""
            font_size: 24
            color: 1, 0, 0, 1
            size_hint: None, None
            size: 400, 100
            pos_hint: {"center_x": 0.5, "center_y": 0.6}

        Label:
            text: "Game Over"
            font_size: 48
            color: 1, 0, 0, 1
            size_hint: None, None
            size: 200, 50
            pos_hint: {"center_x": 0.5, "center_y": 0.7}

        Button:
            text: "Restart"
            font_size: 24
            size_hint: None, None
            size: 200, 50
            pos_hint: {"center_x": 0.5, "center_y": 0.4}
            on_release:
                root.restart_game()